<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shadow"
        android:scaleType="fitXY"
        android:alpha="0.15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:text="Default Alarm Title"
        android:textStyle="normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alarm_severity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Catastrophic"
            android:textSize="14sp"
            android:padding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/alarm_current_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:text="165"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTwoLiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:maxLines="2"
        android:textSize="14sp"
        android:ellipsize="end"
        android:text="very very very very very very very very very very very very very very very very very very very very very very very very long text"/>
    </LinearLayout>
</FrameLayout>
